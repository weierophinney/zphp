# :command.usage
zphp_usage() {
  if [[ -n $long_usage ]]; then
    printf "zphp\n"
    echo

    printf "  Containerized ZendPHP\n  \n  Run PHP via a container.\n  Switch between different PHP versions.\n  Run PHP scripts.\n  Run Composer.\n"
    echo

  else
    printf "zphp - Containerized ZendPHP\n"
    echo

  fi

  printf "Usage:\n"
  printf "  zphp COMMAND\n"
  printf "  zphp [COMMAND] --help | -h\n"
  printf "  zphp --version | -v\n"
  echo
  # :command.usage_commands
  printf "Commands:\n"
  echo "  completions   Generate bash autocompletions script"
  echo "  run           Run the PHP binary or a PHP script"
  echo "  composer      Run a composer command using the given PHP version"
  echo "  switch        Switch the default version of PHP selected"
  echo

  # :command.long_usage
  if [[ -n $long_usage ]]; then
    printf "Options:\n"

    # :command.usage_fixed_flags
    echo "  --help, -h"
    printf "    Show this help\n"
    echo
    echo "  --version, -v"
    printf "    Show version number\n"
    echo

  fi
}

