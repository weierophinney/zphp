#!/bin/bash

set -e

if [[ $# -lt 2 ]]; then
    echo "This script requires at least two arguments:"
    echo "  - the PHP version to run"
    echo "  - a script or argument to pass to that PHP version"
    exit 1
fi

php_version=$1

docker run -it --rm -v "$(pwd):/app" -w /app "zendphp:${php_version}" "${@:2}"
